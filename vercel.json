{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/node",
      "config": {
        "builder": "react-scripts"
      }
    },
    {
      "src": "server/**/*",
      "use": "@vercel/node",
      "config": {
        "distDir": "server"
      }
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "server/api/$1" }
  ]
}
